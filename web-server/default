# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	root /var/www/html;
	#remember: make /var/www/html/trainingplanner/ writable and executable for OTHER

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location /trainingplanner/ {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;

		 autoindex on;
		autoindex_exact_size off;
		autoindex_format html;
		autoindex_localtime on;

		# FastCGI location for handling requests
        fastcgi_pass unix:/run/php/php8.2-fpm.sock;  # PHP-FPM socket (adjust as needed)
        fastcgi_param SCRIPT_FILENAME /var/www/html/trainingplanner/scripts/uri_parser.php;  # Path to your PHP script
        include fastcgi_params;


        # Extract the filename from the URL argument (e.g., /download/?file=somefile.txt)
        # set $file_path $arg_file;

        # Check if the file exists and is a valid file (i.e., not a directory)
        # if ($file_path = "") {
         #    return 400 "File parameter is missing.";
        # }

        # Define the directory where files are stored
        # set $download_dir /var/www/html/trainingplanner;

        # Ensure the requested file is within the allowed directory (to avoid directory traversal)
        # if ($file_path !~ ^[a-zA-Z0-9_-]+\.txt$) {
        #     return 400 "Invalid file type requested.";
        # }

        # Ensure the file exists
        # if (!-f $download_dir/$file_path) {
        #     return 404 "File not found.";
        # }

        # Serve the file for download
        #root $download_dir;
        # add_header Content-Disposition 'attachment; filename=$file_path';
	}

}
